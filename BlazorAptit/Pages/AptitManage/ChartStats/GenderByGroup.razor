                @foreach (var genderGroup in statistics.GroupBy(s => s.User_Gender))
                {
                    <div class="col-md-6">
                        <div class="gender-stats-card">
                            <h5 class="card-title">@GetGenderDisplay(genderGroup.Key) 통계</h5>
